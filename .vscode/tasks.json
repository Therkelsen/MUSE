{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-and-debug",
            "dependsOn": "build", // Specify the build task as a dependency
            "type": "shell",
            "command": "${command:cmake.launchTargetPath}", // Use the built executable as the launch target
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "${file}",
                "-o",
                "${workspaceFolder}/Code/sources/${fileBasenameNoExtension}.exe"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always", // Ensure the built executable is revealed in the file explorer
                "echo": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
